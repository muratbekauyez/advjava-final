<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <resource-ref>
        <res-ref-name>jdbc/postgres</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CreatorUpdateServlet</servlet-name>
        <servlet-class>CreatorUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreatorUpdateServlet</servlet-name>
        <url-pattern>/CreatorUpdateServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CreatorDeleteServlet</servlet-name>
        <servlet-class>CreatorDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreatorDeleteServlet</servlet-name>
        <url-pattern>/CreatorDeleteServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ModeratorUpdateServlet</servlet-name>
        <servlet-class>ModeratorUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModeratorUpdateServlet</servlet-name>
        <url-pattern>/ModeratorUpdateServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ModeratorDeleteServlet</servlet-name>
        <servlet-class>ModeratorDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModeratorDeleteServlet</servlet-name>
        <url-pattern>/ModeratorDeleteServlet </url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreatorInsertServlet</servlet-name>
        <servlet-class>CreatorInsertServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreatorInsertServlet</servlet-name>
        <url-pattern>/CreatorInsertServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ModeratorInsertServlet</servlet-name>
        <servlet-class>ModeratorInsertServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModeratorInsertServlet</servlet-name>
        <url-pattern>/ModeratorInsertServlet</url-pattern>
    </servlet-mapping>
</web-app>
